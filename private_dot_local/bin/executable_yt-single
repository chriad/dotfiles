#!/bin/bash

# use playlist index, not number in title as metadata


/usr/local/bin/youtube-dl "$1" --config-location <(echo "
-i
-c
-o '/media/chriad/lenovo/%(extractor)s/%(channel)s/%(title)s.%(ext)s'
--write-info-json
--write-thumbnail
--write-description
--add-metadata
--write-auto-sub
--sub-lang en
--xattrs
")
